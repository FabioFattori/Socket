        <Label x:Name="lbl_porta" Content="Inserire porta&#xA;" HorizontalAlignment="Left" Height="34" Margin="330,164,0,0" VerticalAlignment="Top" Width="151"/>
        <TextBox x:Name="IndirizzoIP_txt" HorizontalAlignment="Left" Height="24" Margin="330,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126"/>
        <TextBox x:Name="Messaggio_txt" HorizontalAlignment="Left" Height="74" Margin="330,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
