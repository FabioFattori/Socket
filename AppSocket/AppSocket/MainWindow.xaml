        <Button x:Name="btn_addToRubrica" Content="Aggiungi in Rubrica" HorizontalAlignment="Left" Height="24" Margin="496,203,0,0" VerticalAlignment="Top" Width="122" Click="btn_addToRubrica_Click"/>
        <Label x:Name="lbl_nome" Content="Nome" HorizontalAlignment="Left" Height="29" Margin="496,80,0,0" VerticalAlignment="Top" Width="122"/>
        <TextBox x:Name="txt_nome" HorizontalAlignment="Left" Height="24" Margin="496,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122"/>

    </Grid>
</Window>
